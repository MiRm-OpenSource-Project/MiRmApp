<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_add_white_24dp" android:id="@+id/newServerButton"
            android:layout_alignParentEnd="true" android:layout_alignParentBottom="true" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@string/activity_list_message_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView36" android:paddingLeft="16dp"
                    android:paddingRight="16dp" android:padding="16dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <Button
                        android:text="@string/activity_list_button_aboutmirm"
                        android:layout_height="wrap_content" android:id="@+id/listAboutMiRmButton"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored" android:layout_weight="1"
                        android:layout_width="0dp"/>
                <Button
                        android:text="@string/activity_list_button_howtouse"
                        android:layout_height="wrap_content" android:id="@+id/howToUseButton"
                        android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored" android:layout_width="0dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view3" android:layout_height="8dp" android:background="#689f38"
                    android:layout_weight="1"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" android:id="@+id/view4" android:background="#C2185B"
                    android:layout_weight="1"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view5" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#1976D2"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view6" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#AFB42B"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view7" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#616161"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view8" android:layout_weight="1"
                    android:background="#E64A19" android:layout_height="8dp"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view9" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#00796B"/>
        </LinearLayout>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/serverListView"/>
    </LinearLayout>

