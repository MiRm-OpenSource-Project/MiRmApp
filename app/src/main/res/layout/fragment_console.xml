<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/consoleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorConsole">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/consoleScrollView">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/consoleTextView" android:paddingLeft="4dp"
                        android:paddingRight="4dp" android:textColor="@color/colorLoginForm"
                        android:textIsSelectable="true" android:clickable="true"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textMultiLine"
                        android:ems="10"
                        android:id="@+id/commandTextField" android:background="@color/colorCommandArea"
                        android:paddingRight="4dp" android:textColor="@color/colorLoginForm"
                        android:drawableLeft="@drawable/ic_prompt_24dp" android:hint="コマンドを入力..."
                        android:textSize="14sp" android:maxLines="1"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>