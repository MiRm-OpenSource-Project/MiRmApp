<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingLeft="16dp" android:paddingRight="16dp"
                    android:paddingTop="16dp">
                <TextView
                        android:text="@string/fragment_controller_message_expire_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView18"
                        android:textColor="@color/colorBackground" android:textSize="18sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="@string/fragment_controller_message_serverid"
                            android:layout_height="wrap_content" android:id="@+id/serverNameTextView"
                            android:layout_weight="1" android:layout_width="wrap_content"/>
                    <TextView
                            android:text="@string/fragment_controller_message_status_unknown"
                            android:layout_height="wrap_content" android:id="@+id/statusTextView"
                            android:textAlignment="center" android:layout_width="80dp"/>
                </LinearLayout>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp"/>
                <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/expireProgressBar"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="@string/fragment_controller_message_expire_unknown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/expireTextView"
                            android:textSize="14sp"
                            android:layout_weight="1"/>
                    <Button
                            android:text="@string/fragment_controller_button_reload"
                            android:layout_height="wrap_content" android:id="@+id/reloadExpireButton"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:textAlignment="center"
                            android:layout_width="80dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <View
                        android:layout_width="wrap_content"
                        android:id="@+id/view3" android:layout_height="8dp" android:background="#689f38"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="wrap_content"
                        android:layout_height="8dp" android:id="@+id/view4" android:background="#C2185B"
                        android:layout_weight="1"/>
                <View
                        android:layout_width="wrap_content"
                        android:id="@+id/view5" android:layout_weight="1" android:layout_height="8dp"
                        android:background="#1976D2"/>
                <View
                        android:layout_width="wrap_content"
                        android:id="@+id/view6" android:layout_weight="1" android:layout_height="8dp"
                        android:background="#AFB42B"/>
                <View
                        android:layout_width="wrap_content"
                        android:id="@+id/view7" android:layout_weight="1" android:layout_height="8dp"
                        android:background="#616161"/>
                <View
                        android:layout_width="wrap_content"
                        android:id="@+id/view8" android:layout_weight="1"
                        android:background="#E64A19" android:layout_height="8dp"/>
                <View
                        android:layout_width="wrap_content"
                        android:id="@+id/view9" android:layout_weight="1" android:layout_height="8dp"
                        android:background="#00796B"/>
            </LinearLayout>
            <TextView
                    android:text="@string/fragment_controller_message_manage_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:background="@color/colorPrimary" android:textColor="#fff"
                    android:padding="4dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView7"
                        app:srcCompat="@drawable/ic_server_start"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/fragment_controller_message_run_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView30" android:textSize="18sp"
                            android:textColor="@color/colorBackground"/>
                    <TextView
                            android:text="@string/fragment_controller_message_run_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView31"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <Button
                        android:text="@string/fragment_controller_button_run"
                        android:layout_height="wrap_content" android:id="@+id/serverStartButton"
                        android:layout_width="wrap_content" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:id="@+id/view12" android:layout_height="1dp" android:background="@color/colorLoginForm"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView8"
                        app:srcCompat="@drawable/ic_server_stop"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/fragment_controller_message_stop_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView32" android:textSize="18sp"
                            android:textColor="@color/colorBackground"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView33"
                            android:text="@string/fragment_controller_message_stop_subtitle"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <Button
                        android:text="@string/fragment_controller_button_run"
                        android:layout_height="wrap_content" android:id="@+id/serverStopButton"
                        android:layout_width="wrap_content" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:id="@+id/view13" android:layout_height="1dp" android:background="@color/colorLoginForm"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView9"
                        app:srcCompat="@drawable/ic_server_forcestop"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/fragment_controller_message_forcestop_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView29" android:textSize="18sp"
                            android:textColor="@color/colorBackground"/>
                    <TextView
                            android:text="@string/fragment_controller_message_forcestop_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView34"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <Button
                        android:text="@string/fragment_controller_button_run"
                        android:layout_height="wrap_content" android:id="@+id/serverForceStopButton"
                        android:layout_width="wrap_content" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
            <TextView
                    android:text="@string/fragment_controller_message_utillity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:padding="4dp"
                    android:background="@color/colorPrimary" android:textColor="#fff"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView10"
                        app:srcCompat="@drawable/ic_folder_black_24dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/fragment_controller_message_fileplugin_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView35" android:textSize="18sp"
                            android:textColor="@color/colorBackground"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView36"
                            android:text="@string/fragment_controller_message_fileplugin_subtitle"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <Button
                        android:text="@string/fragment_controller_button_open"
                        android:layout_height="wrap_content" android:id="@+id/managePluginButton"
                        android:layout_width="wrap_content" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:id="@+id/view14" android:layout_height="1dp" android:background="@color/colorLoginForm"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView11"
                        app:srcCompat="@drawable/ic_crashdump"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/fragment_controller_message_crushdump_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView37" android:textSize="18sp"
                            android:textColor="@color/colorBackground"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView38"
                            android:text="@string/fragment_controller_message_crushdump_subtitle"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <Button
                        android:text="@string/fragment_controller_button_open"
                        android:layout_height="wrap_content" android:id="@+id/crashDumpButton"
                        android:layout_width="wrap_content" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:id="@+id/view15" android:layout_height="1dp" android:background="@color/colorLoginForm"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView12"
                        app:srcCompat="@drawable/ic_reload"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/fragment_controller_message_expiretime_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView39" android:textSize="18sp"
                            android:textColor="@color/colorBackground"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView40"
                            android:text="@string/fragment_controller_message_expiretime_subtitle"/>
                </LinearLayout>
                <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1"/>
                <Button
                        android:text="@string/fragment_controller_button_open"
                        android:layout_height="wrap_content" android:id="@+id/expireButton"
                        android:layout_width="wrap_content" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:id="@+id/view" android:layout_height="1dp" android:background="@color/colorLoginForm"
                    android:layout_weight="1"/>
            <TextView
                    android:text="@string/fragment_controller_message_expiretime_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView41" android:paddingRight="16dp"
                    android:paddingLeft="16dp" android:paddingTop="4dp"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
        </LinearLayout>
    </ScrollView>

