<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view3" android:layout_height="8dp" android:background="#689f38"
                    android:layout_weight="1"/>
            <View
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" android:id="@+id/view4" android:background="#C2185B"
                    android:layout_weight="1"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view5" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#1976D2"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view6" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#AFB42B"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view7" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#616161"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view8" android:layout_weight="1"
                    android:background="#E64A19" android:layout_height="8dp"/>
            <View
                    android:layout_width="wrap_content"
                    android:id="@+id/view9" android:layout_weight="1" android:layout_height="8dp"
                    android:background="#00796B"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:gravity="center_horizontal">
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" ads:srcCompat="@drawable/qrcode"
                    android:id="@+id/qrCodeImage"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
            <TextView
                    android:text="@string/activity_qrcode_message_serverid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qrCodeServerId"
                    android:textAlignment="center"/>
            <TextView
                    android:text="@string/activity_qrcode_message_port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qrCodePort" android:textAlignment="center"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            <ProgressBar
                    android:layout_height="wrap_content"
                    android:id="@+id/qrCodeLoading" style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="400px"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            <Button
                    android:text="@string/activity_qrcode_button_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qrCodeSaveButton"
                    style="@style/Widget.AppCompat.Button.Colored"/>
            <Button
                    android:text="@string/activity_qrcode_button_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/qrCodeCloseButton"
                    style="@style/Widget.AppCompat.Button" android:padding="16dp"/>
            <TextView
                    android:text="@string/activity_qrcode_message_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:textAlignment="viewStart"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>